<Window x:Class="MyWpfNETCoreLib.LogConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LogConsole" Height="1000" Width="500"
        WindowStartupLocation="Manual" Top="0" Left="0">
    <Grid>
        <ScrollViewer Margin="0" Background="#FF000128">
            <TextBlock Name="OutputBlock"  Foreground="White" FontFamily="Consolas" Padding="10" />
        </ScrollViewer>
    </Grid>
</Window>